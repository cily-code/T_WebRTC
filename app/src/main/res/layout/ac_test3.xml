<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_test3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cily.utils.t_webrtc.TestAc3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_room_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="自己房间号" />

        <EditText
            android:id="@+id/ed_room_num_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="目标房间号" />

        <Button
            android:id="@+id/btn_conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接并登陆" />

        <EditText
            android:id="@+id/ed_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="输入消息" />

        <Button
            android:id="@+id/btn_send_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送消息" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="呼叫" />

        <Button
            android:id="@+id/btn_hold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hold住"/>

        <Button
            android:id="@+id/btn_join_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入房间"/>

        <EditText
            android:id="@+id/ed_msg_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
